      if [ -d /sys/firmware/efi ]; then
        apt-get install -y efibootmgr
        efibootmgr -o $(efibootmgr | perl -n -e '/Boot(.+)\* ubuntu/ && print $1')
      fi
  package_update: true
  package_upgrade: true
  user-data:
    preserve_hostname: true
    disablee_root: false
    package_update: true
    package_upgrade: true
    ssh_pwauth: true
    disable_root: false
