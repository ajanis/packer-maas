
{
  "packer": {
    "required_version": ">= 1.7.0",
    "required_plugins": {
      "qemu": {
        "version": "~> 1.0",
        "source": "github.com/hashicorp/qemu"
      }
    }
  },
  
  "variable": {
    "filename": {
      "type": "string",
      "default": "cableos.tar.gz",
      "description": "The filename of the tarball to produce"
    },
    "source_iso_directory": {
      "type": "string",
      "default": "/opt",
      "description": "Location of source Debirf and Apollo ISO files"
    },
    "http_directory": {
      "type": "string",
      "default": "http",
      "description": "HTTP directory accessible to images during build"
    },
    "scripts_directory": {
      "type": "string",
      "default": "scripts",
      "description": "Build script directory"
    },
    "image_path": {
      "type": "string",
      "default": "images",
      "description": "Boot image directory"
    },
    "debirf_build_path": {
      "type": "string",
      "default": "debirf",
      "description": "Debian LiveImage build directory"
    },
    "debirf_iso": {
      "type": "string",
      "default": "debirf-live_bullseye_amd64.iso",
      "description": "Debian LiveImage ISO filename"
    }
  }
}
